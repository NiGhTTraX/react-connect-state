{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "es2017", "dom"],
    "sourceMap": true,
    "strict": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },

  "exclude": [
    "node_modules",
    "build"
  ]
}
